{
    "compilerOptions": {
        "types": ["node", "mocha"],
        "declaration": true,
        "target": "ES6",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": false,
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "exclude": [
        "node_modules"
    ]
}